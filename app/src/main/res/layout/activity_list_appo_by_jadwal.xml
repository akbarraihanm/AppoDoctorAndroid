<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ListAppoByJadwalActivity">
    <ProgressBar
            android:id="@+id/pbLoadAppo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/tvDataNull2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:text="Data tidak ada"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:id="@+id/linearLayoutJadwal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam"
                android:textSize="17sp"
        />
        <TextView
                android:id="@+id/tvJam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="18:00 - 20:00"
                android:textColor="@color/warnaHitam"
                android:textSize="20sp"
        />
        <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/rvListAppo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/rvappojadwal_item">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>