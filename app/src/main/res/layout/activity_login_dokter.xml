<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".LoginDokterActivity">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="12dp"
    >
        <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buat Janji Dengan Dokter\nRumah Sakit Wiyung Sejahtera"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:layout_marginBottom="30dp"
            />
            <EditText
                    android:id="@+id/etTlp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No. Telepon"
                    android:inputType="number"
                    android:maxLength="12"
            />
            <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
            />
            <Button
                    android:id="@+id/btMasuk"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Masuk"
                    android:textColor="#fff"
                    android:backgroundTint="@color/colorPrimary"
            />
            <TextView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="atau"
                    android:textSize="13sp"
            />
            <TextView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:id="@+id/tvMasukPasien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masuk sebagai pasien"
                    android:textColor="#BB1616"
                    android:textSize="15sp"
            />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>