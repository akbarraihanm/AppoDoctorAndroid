<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        tools:context=".activity.BuatJanjiActivity">

    <ProgressBar
            android:id="@+id/pbJanji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="@+id/layoutBuatJanji" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/layoutBuatJanji"/>
    <TextView
            android:id="@+id/tvDataNull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Data tidak ada"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="@+id/layoutBuatJanji" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/layoutBuatJanji"/>
    <LinearLayout
            android:id="@+id/layoutBuatJanji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
        <TextView
                android:id="@+id/tvPilihPoli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Poli :"
                android:textSize="18sp"
                android:textColor="#000"
        />
        <Spinner
                android:layout_marginTop="5dp"
                android:id="@+id/spPoli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </Spinner>
        <TextView
                android:id="@+id/tvPilihDokter"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Dokter :"
                android:textSize="18sp"
                android:textColor="#000"
        />
        <Spinner
                android:layout_marginTop="5dp"
                android:id="@+id/spDokter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </Spinner>
        <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btSelectDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Tanggal"
                android:backgroundTint="@color/colorPrimary"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/btSelectDate"
                android:id="@+id/tvSelectedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="INI TANGGAL"
                android:textSize="18sp"
                android:textColor="#000"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:id="@+id/tvpilihjadwal"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Waktu :"
                android:textSize="18sp"
                android:textColor="#000"
        />
        <Spinner
                android:id="@+id/spJadwal"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </Spinner>
        <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btLanjut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lanjut"
                android:textColor="#fff"
                android:backgroundTint="@color/colorPrimary"
        />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>