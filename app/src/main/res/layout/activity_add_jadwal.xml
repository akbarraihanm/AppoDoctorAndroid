<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.AddJadwalActivity">
    <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
    >
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                tools:ignore="MissingConstraints">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="17dp"
                    tools:ignore="MissingConstraints">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isi Data Jadwal"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#000"
                />
                <TextView
                        android:layout_marginTop="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hari / Tanggal"
                        android:textColor="#000"
                        android:textSize="16sp"
                />
                <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/tvTgl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-Pilih Tanggal-"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                />
                <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jam Mulai"
                        android:textColor="#000"
                        android:textSize="16sp"
                />
                <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/tvJamMulai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-Pilih Jam Mulai-"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                />
                <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jam Selesai"
                        android:textColor="#000"
                        android:textSize="16sp"
                />
                <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/tvJamSelesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-Pilih Jam Selesai-"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                />
                <Button
                        android:layout_marginTop="30dp"
                        android:id="@+id/btAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tambah"
                        android:textColor="#fff"
                        android:backgroundTint="@color/colorPrimary"
                />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>