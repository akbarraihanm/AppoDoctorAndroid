<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".konfirmasijanji.AppoPasienActivity">
    <ProgressBar
            android:id="@+id/pbLoadDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/scrollView2"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints" android:id="@+id/scrollView2">
        <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="MissingConstraints" android:id="@+id/linearLayout" tools:layout_editor_absoluteY="20dp"
                tools:layout_editor_absoluteX="20dp">
            <android.support.v7.widget.CardView
                    app:cardCornerRadius="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_margin="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Permintaan Janji Pasien"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:layout_marginBottom="20dp"
                    />
                    <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Pasien"
                            android:textSize="16sp"
                    />
                    <TextView
                            android:id="@+id/tvNamaPasien"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Nama Pasien"
                            android:textSize="19sp"
                            android:textColor="#000"
                    />
                    <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nomor Rekam Medis"
                            android:textSize="16sp"
                    />
                    <TextView
                            android:id="@+id/tvNoRmPasien"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="123456"
                            android:textSize="19sp"
                            android:textColor="#000"
                    />
                    <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hari / Tanggal"
                            android:textSize="16sp"
                    />
                    <TextView
                            android:id="@+id/tvTanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="2019-06-23"
                            android:textSize="19sp"
                            android:textColor="#000"
                    />
                    <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jam"
                            android:textSize="16sp"
                    />
                    <TextView
                            android:id="@+id/tvJam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="15:00 ~ 16:00"
                            android:textSize="19sp"
                            android:textColor="#000"
                    />
                    <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textSize="16sp"
                    />
                    <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Menunggu"
                            android:textSize="19sp"
                            android:textColor="#000"
                    />
                    <TextView
                            android:id="@+id/keterangan"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keterangan"
                            android:textSize="16sp"
                    />
                    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                                 android:layout_height="50dp">
                        <EditText
                                android:id="@+id/etKeterangan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Jam Bertemu / Ket. Lain"
                                tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"/>
                        <TextView
                                android:id="@+id/tvKeterangan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Keterangan"
                                android:textSize="19sp"
                                android:textColor="#000"
                        />
                    </android.support.constraint.ConstraintLayout>
                    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                                 android:layout_height="wrap_content">
                        <Button
                                android:id="@+id/btTerima"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Terima"
                                android:textColor="#FFF"
                                android:backgroundTint="@color/colorPrimary"
                        />
                        <Button
                                android:id="@+id/btBatal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Batalkan"
                                android:backgroundTint="@color/colorAccent"
                                android:textColor="#fff"
                        />
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>